<div class="comment">
  <%= form_for([micropost, micropost.comments.build], remote: true) do |f| %>
    <div class="input-group">
      <span class="input-group-addon comment-form"><%= link_to gravatar_for(current_user, size: 15),
        current_user %>
      </span>
      <div class="form-inline">
        <div class="form-group post-comment">
          <%= f.text_field :content, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "add", class: "form-control" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
