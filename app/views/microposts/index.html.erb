<% provide :title, t("posts") %>
<h1><%= t "all_posts" %></h1>

<div class="row">
  <%= form_tag microposts_path, :method => "get" do %>
    <div class="col-md-6 col-md-offset-3">
      <%= text_field_tag :search,params[:search], class: "form-control" %>
      <%= submit_tag "search", name: nil, class: "form-control" %>
    </div>
  <% end %>
  <div class="col-md-6 col-md-offset-3">
    <% if @microposts.any? %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
